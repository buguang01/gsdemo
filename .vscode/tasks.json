{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "go build def",
            "type": "shell",
            "command": "go",
            "args": [
                "build",
                "-o",
                "${workspaceRoot}/bin/"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "go build linux",
            "type": "shell",
            "command": "go",
            "args": [
                "build",
                "-o",
                "${workspaceRoot}/bin/"
            ],
            "options": {
                "env": {
                    "GOOS": "linux",
                    "GOARCH": "amd64"
                }
            }
        }
    ]
}